# Example of a local database setup.
login: &login
  host: <%= ENV["DB_HOST"] || "localhost" %>
  username: <%= ENV["DB_USER"] || ENV["POSTGRES_USER"] %>
  password: <%= ENV["DB_PASSWORD"] || ENV["POSTGRES_PASSWORD"] %>
  encoding: utf8
  adapter: postgis
  template: template_postgis

development:
  <<: *login
  database: inaturalist_development

test:
  <<: *login
  database: inaturalist_test

